.weather{
  width: 100%;
  height: 390rpx;
   background-color:rgb(110,120,156);
    display: flex;
  justify-content:space-around;
  align-items: center; 
 
}

.weather>text{
  font-size: 200rpx;
}
.weather-1{
    width: 100%;
  height: 100%;
   background-color:rgb(144,151,176);
 
}
.weather-1>view{
   width: 100%;
  display: flex;
  padding: 35rpx 60rpx;
}
