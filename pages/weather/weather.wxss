  width: 80%;
  height:100rpx ;
  border: 5rpx solid rgb(255,255,255);
  border-radius: 50rpx;
  }
  .click{
    height: 100rpx;
    width: 100%;
    
    display: flex;
   justify-content:space-around;
   align-items: center;
  }
  .click>view{
   height: rpx;
   width: 300rpx;
   border-radius: 20rpx;
   
  }
  .click-text{
   display: flex;
   justify-content:space-around;
   font-size:60rpx;
  }
  .hotSelf{
    height: 490rpx;
    background-color:rgb(110,120,156);
  }
  .titlewirp{
    height: 44rpx;
    padding:20rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .titlewirp>text{
    font-size: 36rpx;
  }
  .titlewirp>text:last-child{
    font-size: 28rpx;
  }
  .titlewirp>text text:first-child{
    width: 6rpx;
    height: 30rpx;
    display: inline-block;
    border-left: 6rpx solid #2196f3;
  }
